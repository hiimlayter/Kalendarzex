@page
@model RegisterModel
@{
    ViewData["Title"] = "Zarejestruj sie";
}

<h1 style="padding-top: 50px">Zarejestruj się</h1>

<div class="row" style="padding-top: 50px">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Utwórz nowe konto.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">E-mail</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Powtórz hasło</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zarejestruj</button>
        </form>
    </div>
    <div class="col-md-6" style="margin-left:50px">
        <div class="col-md-12" style="margin-bottom: 25px;">
            <p class="mb-1" style="font-size:20px; text-align:justify;">KalendarzEX jest usługą pozwalającą Ci na zapanowanie nad ogromem pracy. Dzieki naszej aplikacji trzymasz pełną kontrolę nad organizacją swojego czasu.</p>
        </div>
        <img src="https://media.istockphoto.com/photos/happy-young-couple-paying-bills-online-in-computer-app-picture-id1197547531?k=20&m=1197547531&s=612x612&w=0&h=aN7S3ujglTH9YALPgGiF7Gv5xqMp4dPXodMj9B-H1ak="/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
