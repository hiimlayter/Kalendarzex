@model EventScheduler.Models.Note

<div class="modal" id="noteDetail">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notatka</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="EditNote">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Opis</label>
                        <input id="descInput" asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Zamknij</button>
                    <input type="submit" class="btn btn-primary" value="Zapisz zmiany" data-save="modal" />
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
